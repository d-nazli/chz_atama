@model chz_atama.Models.Personel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Edit</h1>

<h4>Personel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PersonelId" />
            <div class="form-group">
                <label asp-for="PersonelAd" class="control-label"></label>
                <input asp-for="PersonelAd" class="form-control" />
                <span asp-validation-for="PersonelAd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PersonelSoyad" class="control-label"></label>
                <input asp-for="PersonelSoyad" class="form-control" />
                <span asp-validation-for="PersonelSoyad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartmanID" class="control-label"></label>
                <select asp-for="DepartmanID" class="form-control" asp-items="ViewBag.dprtmn"></select>
                <span asp-validation-for="DepartmanID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PersonelEposta" class="control-label"></label>
                <input asp-for="PersonelEposta" class="form-control" />
                <span asp-validation-for="PersonelEposta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PersonelTel" class="control-label"></label>
                <input asp-for="PersonelTel" class="form-control" />
                <span asp-validation-for="PersonelTel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Geri Dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
